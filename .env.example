# Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# BASIC SITE CONFIGURATION
# =============================================================================

# Site information
SITE_NAME="Universal Portfolio & Web Tools"
SITE_URL="https://yourdomain.com"
SITE_DESCRIPTION="A complete web platform combining portfolio showcase with powerful web utilities"

# Contact information
CONTACT_EMAIL="your-email@domain.com"
CONTACT_NAME="Your Name"

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (true for development, false for production)
DEBUG_MODE=true

# Error reporting level
ERROR_REPORTING=E_ALL

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for CSRF tokens and encryption (generate a random 32-character string)
SECRET_KEY="change-this-to-a-random-32-char-string"

# Session configuration
SESSION_LIFETIME=7200
SESSION_NAME="portfolio_session"

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIME_WINDOW=3600

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS="jpg,jpeg,png,gif,pdf,txt,zip,7z,doc,docx"

# File storage path (relative to project root)
UPLOAD_PATH="private/data/qr-uploads"

# =============================================================================
# QR CODE SETTINGS
# =============================================================================

# QR code size (pixels)
QR_CODE_SIZE=300

# QR code format (png, jpg, svg)
QR_CODE_FORMAT=png

# QR code error correction level (L, M, Q, H)
QR_CODE_ERROR_CORRECTION=M

# =============================================================================
# DATABASE SETTINGS (Optional - for future features)
# =============================================================================

# Database connection
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=portfolio
# DB_USERNAME=your_username
# DB_PASSWORD=your_password

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Google Analytics tracking ID
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Email service (for contact forms)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_ENCRYPTION=tls

# reCAPTCHA (for contact forms)
# RECAPTCHA_SITE_KEY=your-site-key
# RECAPTCHA_SECRET_KEY=your-secret-key

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup directory
BACKUP_PATH="backups"

# Number of backups to keep
BACKUP_RETENTION_DAYS=30

# Automatic backup schedule (cron format)
# BACKUP_SCHEDULE="0 2 * * *"
